<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:src="@drawable/bg1"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="180dp"/>

    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@drawable/user"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halo,"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="77dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelompok 7"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="77dp"
                android:layout_marginLeft="5dp"/>

            
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/setting"
                android:layout_marginTop="85dp"
                android:layout_marginLeft="140dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kelompok7@gmail.com"
            android:layout_marginLeft="70dp"/>

        <Button
            android:layout_width="370dp"
            android:layout_height="29dp"
            android:text="Edit Profil"
            android:textColor="#fff"
            android:background="@drawable/button"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cek Sertifikatmu, disini"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:layout_width="370dp"
            android:layout_height="37dp"
            android:text="Cek Sertifikat"
            android:textColor="#fff"
            android:background="@drawable/button"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mau tau tentang YukVaksin?"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:layout_width="370dp"
            android:layout_height="37dp"
            android:text="Tentang YukVaksin"
            android:textColor="#fff"
            android:background="@drawable/button"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="330dp"
            android:layout_height="170dp"
            android:src="@drawable/bg5"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

</RelativeLayout>